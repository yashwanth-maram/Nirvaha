{
  "name": "nirvaha-backend",
  "version": "1.0.0",
  "description": "Backend API for Nirvaha Dashboard Companion feature",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
